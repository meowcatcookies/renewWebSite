@model shopping.Models.Orders

@{
  ViewData["Title"] = $"訂單： {Model.SheetNo} 變更訂單狀態";
  Layout = "_LayoutAdmin";
  List<SelectListItem> StatusList = new List<SelectListItem>();
  using var sqlStatus = new z_sqlOrdersStatus();
  StatusList = sqlStatus.GetDropDownList("StatusNo", "StatusName", "StatusNo", false);
}

<div class="card card-size-small mt-5">
  <div class="card-header bg-secondary text-white">
    <div class="pt-2 px-2">
      <div class="float-start">
        <h4>@ViewData["Title"]</h4>
      </div>
    </div>
  </div>
  <div class="card-body p-2">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.SheetNo)

        <div class="row form-group">
          @Html.LabelFor(model => model.StatusName, htmlAttributes: new { @class = "control-label col-md-3" })
          <div class="col-md-9">
            @Html.DropDownListFor(model => model.StatusCode, StatusList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StatusCode, "", new { @class = "text-danger" })
          </div>
        </div>

        <hr>
        <div class="row form-group">
          <div class="col-md-12">
            <div class="float-start">
              <input type="submit" value="確認變更" class="btn btn-primary" />
            </div>
            <div class="float-end">
              @Html.ActionLink("取消變更", "Index", ActionService.Controller, new { area = ActionService.Area }
                     , new { @class = "btn btn-success" })
            </div>
          </div>
        </div>
      </div>
    }
  </div>
</div>
