<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="ASP.NET MVC Core - Bootstrap 5 Responsive Admin">
  <meta name="author" content="Johnson">
  <meta name="keyword" content="ASP.NET MVC Core, Dashboard, Admin, Template, Theme, Bootstrap, Responsive">
  <link rel="icon" type="image/x-icon" href="@Url.Content("~/favicon.ico")">
  <title>@ViewData["Title"] - 後台管理</title>
  <link rel="stylesheet" href="@Url.Content("~/lib/jqueryui/themes/base/jquery-ui.min.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap-icons/font/bootstrap-icons.min.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/toastr.js/toastr.min.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/datepicker/datepicker.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/font-awesome/css/all.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap-select/css/bootstrap-select.min.css")" />
  <link rel="stylesheet" href="@Url.Content("~/lib/flag-icons/css/flag-icons.min.css")" />
  <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
  @await RenderSectionAsync("Styles", required: false)

  <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
  <script src="@Url.Content("~/lib/jqueryui/jquery-ui.min.js")"></script>
  <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")"></script>
  <script src="@Url.Content("~/lib/bootstrap-select/js/bootstrap-select.min.js")"></script>
  <script src="@Url.Content("~/lib/bootstrap-select/js/i18n/defaults-zh_TW.min.js")"></script>
  <script src="@Url.Content("~/lib/Chart.js/chart.umd.min.js")"></script>
  <script src="@Url.Content("~/lib/ckeditor/ckeditor.js")"></script>
  <script src="@Url.Content("~/lib/ckeditor/lang/zh.min.js")"></script>
  <script src="@Url.Content("~/lib/font-awesome/js/all.js")"></script>
  <script src="@Url.Content("~/lib/moment.js/moment.min.js")"></script>
  <script src="@Url.Content("~/lib/moment.js/locale/zh-tw.min.js")"></script>
  <script src="@Url.Content("~/lib/datepicker/datepicker.js")"></script>
  <script src="@Url.Content("~/lib/datepicker/datepicker-zh-TW.js")"></script>
  <script src="@Url.Content("~/lib/FullCalendar/6.1.9/dist/index.global.min.js")"></script>
  <script src="@Url.Content("~/lib/FullCalendar/6.1.9/packages/core/locales-all.global.min.js")"></script>
  <script src="@Url.Content("~/lib/FullCalendar/6.1.9/packages/bootstrap5/index.global.min.js")"></script>
  <script src="@Url.Content("~/lib/sweetalert/sweetalert.min.js")"></script>
  <script src="@Url.Content("~/lib/toastr.js/toastr.min.js")"></script>
  <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</head>

<body>
  <div class="container-fluid">
    <!-- TopMenu -->
    <div class="row flex-nowrap">
      <div class="col-12 bg-dark">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white">
          <a class="navbar-brand" href="#">後台管理</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index" , "Home" , new {area = "Admin"})">首頁</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown"
                  aria-expanded="false">
                  系統功能
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="@Url.Action("Index" , "Home" , new {area = "Admin"})">系統功能一</a>
                  </li>
                  <li><a class="dropdown-item" href="@Url.Action("Index" , "Home" , new {area = "Admin"})">系統功能二</a>
                  </li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="@Url.Action("Index" , "Home" , new {area = "Admin"})">其它功能</a>
                  </li>
                </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">無權限功能</a>
              </li>
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle dropdown-toggle" id="dropdownUser1"
                  data-bs-toggle="dropdown" aria-expanded="false">
                  <img src="@SessionService.UserImage" alt="hugenerd" width="30" height="30" class="rounded-circle">
                  <span class="d-none d-sm-inline mx-1">@SessionService.UserName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                  <li><a class="dropdown-item" href="@Url.Action("Index" , "Profile" , new {area = ""})">帳號管理
                    </a>
                  </li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li>
                    <a class="dropdown-item" href="@Url.Action("Logout" , "User" , new {area = ""})">登出系統
                    </a>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
    <div class="row flex-nowrap">
      <!-- SideMenu -->
      <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-secondary">
        <div class="sidenav d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
          <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
            @if (SessionService.RoleNo == "User")
            {
              @await Html.PartialAsync("_PartialMenuUser")
            }
            @if (SessionService.RoleNo == "Mis")
            {
              @await Html.PartialAsync("_PartialMenuMis")
            }
            @if (SessionService.RoleNo == "Member")
            {
              @await Html.PartialAsync("_PartialMenuMember")
            }
          </ul>
        </div>
      </div>
      <div class="col-auto col-md-9 col-xl-10">
        <!-- Site Map -->
        <div class="bg-light py-2">
          <ul class="nav nav-pills text-dark">
            <li><a href="@Url.Action("Index" , "Home" , new {area = "Admin"})">首頁</a></li>
            <li><span class="px-1">/</span></li>
            <li>首頁儀表板</li>
          </ul>
        </div>
        <!-- Content -->
        <div class="col py-3">
          <!-- Content -->
          @RenderBody()
        </div>
      </div>
    </div>
  </div>
  @await RenderSectionAsync("ScriptsBody", required: false)
</body>

</html>
